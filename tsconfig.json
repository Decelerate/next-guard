{
  "compilerOptions": {
    "lib": ["es2015"],
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    },
    "target": "es5",
    "module": "CommonJS",
    "declaration": true,
    "outDir": "./dist",
    "strict": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "**/__tests__/*"],
  "ts-node": {
    "require": ["tsconfig-paths/register"]
  }
}
